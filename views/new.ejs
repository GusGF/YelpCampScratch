<% layout('layouts/boilerplate') %>
  <div class="row">
    <h1 class="text-center">Enter a New Camp Ground</h1>

    <div class="col-md-6 offset-3">
      <form action="/campgrounds" method="post" novalidate class="needs-validation">
        <div class="mb-3">
          <label class="form-label" for="title">Title: </label>
          <input class="form-control" type="text" id="title" name="campground[title]" required>
          <div class="invalid-feedback">Idiot! Fill it in properly!</div>
          <div class="valid-feedback">Looks great!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="location">Location: </label>
          <input class="form-control" type="text" id="location" name="campground[location]" required>
          <div class="invalid-feedback">Idiot! Fill it in properly!</div>
          <div class="valid-feedback">Looks great!</div>
        </div>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]"
            id="price" required>
          <div class="invalid-feedback">Idiot! Fill it in properly!</div>
          <div class="valid-feedback">Looks great!</div>
          <span class="input-group-text">.00</span>
        </div>
        <div class="mb-3">
          <label class="form-label" for="description">Description: </label>
          <textarea class="form-control" type="text" id="description" name="campground[description]"></textarea>
          <div class="invalid-feedback">Idiot! Fill it in properly!</div>
          <div class="valid-feedback">Looks great!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="image">Image: </label>
          <input class="form-control" type="text" id="image" name="campground[image]" required>
        </div>
        <button class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>